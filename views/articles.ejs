<%- include("partials/header") -%>

<% if (usersWithArticles.length === 0) { %>
  <i class="fas fa-key fa-6x"></i>
  <h1 class="display-3">Add an article to begin!</h1>
<% } %>

<% usersWithArticles.forEach(function(user) { %>
    <% user.articles.map((article) => { %>
      <div class="article">
        <h1><%= article.title %></h1>
        <p><%= article.content.substring(0,50) + " ... " %></p>
        <button class="btn" type="button" onclick="location.href='/articles/<%= article._id%>'">read more</button>
      </div>
    <% }); %>
<% }); %>

<%- include("partials/footer") -%>
